
@{
    ViewBag.Title = "Show";
}

@model giSelleRemastered.Models.Product

<div class="card">
    @Html.Partial("_ProductBody", Model)
    @if (ViewBag.ShowButtons)
    {
        <div class="card-footer">
            <form method="post" action="/Product/Delete/@Model.Id">
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                @if (ViewBag.ShowButtons)
                {
                    <a class="btn btn-primary pull-left" href="/Product/Edit/@Model.Id">Edit</a>
                }
                <button type="submit" class="btn btn-danger pull-right">Delete</button>
            </form>
            <div class="clearfix"></div>
        </div>
    }
</div>

<br />
@if (ViewBag.ShowAddComment)
{
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="panel">
            <form method="post" action="/Product/Show/@Model.Id">
                <div class="panel-body">
                    <input type="hidden" name="ProductId" value="@Model.Id" />
                    <label>Continut comentariu</label>
                    <br />
                    <textarea class="form-control" name="Content"></textarea>
                    @Html.ValidationMessage("Content", "", new { @class = "text-danger" })
                    <br />
                    <button class="btn btn-success" type="submit">Adauga comentariu</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
<br />
}

@foreach (var comm in ViewBag.Comments)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div>
                    <p>@comm.Content</p>
                    <small class="pull-right">@comm.Date</small>
                </div>
                <div>
                    By:<strong>@comm.User.UserName</strong>
                </div>
                <br />
                @if (ViewBag.CurrentUser == comm.UserId)
                {
                <div style="display: inline-block; float : left; margin-right: 15px">
                    <a class="glyphicon glyphicon-pencil" href="/Comment/Edit/@comm.Id"></a>
                </div>
                }
                @if (ViewBag.CurrentUser == comm.UserId || ViewBag.IsAdmin)
                { 
                <div style="display: inline-block; float : left">
                    <form method="post" action="/Comment/Delete/@comm.Id">
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button class="glyphicon glyphicon-trash text-danger" style="border: none; background: transparent" type="submit"></button>
                    </form>
                </div>
                }
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <hr />
}
